#ifndef AABBH
#define AABBH
#include "ray.h"
#include "hittable.h"

class aabb {
    public:
        aabb() {}
        aabb(const vec3& a, const vec3& b) { v1 = a; v2 = b;}//对角线两点
        vec3 getV1() const {return v1; }
        vec3 getV2() const {return v2; }

        bool hit(const ray& r, float tmin, float tmax) const {
            for (int i = 0; i < 3; i++) {
                float t0 = std::min((v1[i] - r.origin()[i]) / r.direction()[i],
                                (v2[i] - r.origin()[i]) / r.direction()[i]);
                float t1 = std::max((v1[i] - r.origin()[i]) / r.direction()[i],
                                (v2[i] - r.origin()[i]) / r.direction()[i]);
                tmin = std::max(t0, tmin);
                tmax = std::min(t1, tmax);
                if (tmax <= tmin)//slab重叠
                    return false;
            }
            return true;
        }
        vec3 v1;
        vec3 v2;
};
aabb surrounding_box(aabb box0, aabb box1) {
    vec3 small( std::min(box0.min().x(), box1.min().x()),
                std::min(box0.min().y(), box1.min().y()),
                std::min(box0.min().z(), box1.min().z()));
    vec3 big  ( std::max(box0.max().x(), box1.max().x()),
                std::max(box0.max().y(), box1.max().y()),
                std::max(box0.max().z(), box1.max().z()));
    return aabb(small,big);
}

#endif

